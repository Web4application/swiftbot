{
  "name": "Swiftbot AI Workspace",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers/features/python:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/nvidia-cuda:1": {}
  },
  "forwardPorts": [3000, 8000],
  "portsAttributes": {
    "3000": { "label": "Frontend", "onAutoForward": "openBrowser" },
    "8000": { "label": "Backend", "onAutoForward": "openBrowser" }
  },
  "postCreateCommand": "bash .devcontainer/setup.sh",
  "postStartCommand": "bash .devcontainer/start_services.sh",
  "remoteEnv": {
    "PYTHONUNBUFFERED": "1",
    "GOOGLE_API_KEY": "${localEnv:GOOGLE_API_KEY}",
    "OPENAI_API_KEY": "${localEnv:OPENAI_API_KEY}"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-azureresourcegroups",
        "Arm.embedded-debug",
        "ms-vscode.cpptools",
        "ms-azuretools.vscode-docker"
      ]
    }
  }
}
